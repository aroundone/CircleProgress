<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gzl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.foxmail.aroundme.circleskip.MainActivity">

    <com.foxmail.aroundme.circleskip.CircleProgress
        android:id="@+id/custom_progress"
        android:layout_width="45dp"
        android:layout_height="45dp"
        gzl:circleColor="#64000000"
        gzl:ringWidth="3dp"
        gzl:ringColor="#ff8800"
        gzl:textColor="#FFFFFF"
        gzl:text="Skip"
        gzl:textSize="14sp"
        gzl:stillTime="3000"
        />

    <com.foxmail.aroundme.circleskip.CircleProgress
        android:id="@+id/custom_progress1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        gzl:circleColor="@android:color/holo_blue_light"
        gzl:ringWidth="10dp"
        gzl:ringColor="@android:color/holo_green_light"
        gzl:textColor="#FFFFFF"
        gzl:text="Run"
        gzl:textSize="18sp"
        gzl:stillTime="5000"
        />

    <com.foxmail.aroundme.circleskip.CircleProgress
        android:id="@+id/custom_progress2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        gzl:circleColor="@android:color/holo_orange_light"
        gzl:ringWidth="10dp"
        gzl:ringColor="@android:color/holo_red_light"
        gzl:textColor="#FFFFFF"
        gzl:text="Run"
        gzl:textSize="18sp"
        gzl:stillTime="10000"
        />

</LinearLayout>
